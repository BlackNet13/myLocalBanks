<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/bgMain"
    android:background="@drawable/nikhil_soni"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dbsTv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableRight="@drawable/dbs"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="@string/dbs"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ocbcTv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableRight="@drawable/ocbc"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="@string/ocbc"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/uobTv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableRight="@drawable/uob"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="@string/uob"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>